{
  "name": "@retrigger/core",
  "version": "0.1.1",
  "description": "Ultra-fast file system watcher with native performance for Node.js development tools",
  "main": "index.js",
  "types": "types/index.d.ts",
  "files": [
    "index.js",
    "types/",
    "plugins/",
    "src-js/",
    "*.node",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "napi": {
    "name": "retrigger-nodejs-bindings",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-pc-windows-msvc",
        "armv7-unknown-linux-gnueabihf"
      ]
    }
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node benchmarks/hash-benchmark.js",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "jest",
    "version": "napi version"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/webpack": "^5.28.5",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0",
    "webpack": "^5.89.0"
  },
  "dependencies": {
    "@node-rs/helper": "^1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GriffinCanCode/Retrigger.git",
    "directory": "src/bindings/nodejs"
  },
  "keywords": [
    "file-watcher",
    "webpack",
    "webpack-plugin",
    "vite",
    "vite-plugin",
    "hot-reload",
    "hmr",
    "native",
    "rust",
    "performance",
    "development-tools",
    "build-tools",
    "napi-rs",
    "fast",
    "watcher",
    "file-system"
  ],
  "author": "Griffin Strier",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "optionalDependencies": {
    "@retrigger/core-win32-x64-msvc": "0.1.0",
    "@retrigger/core-darwin-x64": "0.1.0",
    "@retrigger/core-linux-x64-gnu": "0.1.0",
    "@retrigger/core-linux-x64-musl": "0.1.0",
    "@retrigger/core-darwin-arm64": "0.1.0",
    "@retrigger/core-linux-arm64-gnu": "0.1.0",
    "@retrigger/core-linux-arm64-musl": "0.1.0",
    "@retrigger/core-win32-arm64-msvc": "0.1.0",
    "@retrigger/core-linux-arm-gnueabihf": "0.1.0"
  }
}
